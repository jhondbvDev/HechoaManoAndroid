<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/blue_nav_bar">

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:paddingStart="8dp"
            tools:text="@string/republica_dominicana"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineHeight="20sp"
            android:singleLine="false"
            tools:text="@string/monedero_redondo"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@id/region"
            app:layout_constraintBottom_toTopOf="@id/type"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/gray_buttons"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="11dp"
            tools:text="@string/tradicional"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/name"/>

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/gray_buttons"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginStart="3dp"
            tools:text="@string/mini"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/type"
            app:layout_constraintStart_toEndOf="@id/type"/>

        <TextView
            android:id="@+id/stock"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="30dp"
            android:textSize="57sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:lineHeight="0sp"
            tools:text="@string/number_100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/disponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="@string/disponible"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/stock"
            app:layout_constraintTop_toBottomOf="@id/stock"
            app:layout_constraintEnd_toEndOf="@id/stock"/>

        <EditText
            android:id="@+id/edit_stock"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:padding="4dp"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:textSize="57sp"
            android:textColor="@color/gray_text"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>